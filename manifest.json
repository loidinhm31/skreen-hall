{
  "manifest_version": 3,
  "name": "Screen Extensions - Blur & Video Player",
  "version": "1.1.0",
  "description": "Privacy protection with blur controls, title changer, and local video player",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "Screen Extensions",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "video-player.html",
        "video-player.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": [
    "file://*/*"
  ]
}